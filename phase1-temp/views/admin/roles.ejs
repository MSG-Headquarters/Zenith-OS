<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Role Management - Zenith OS</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif; background: #0f1724; color: #e2e8f0; min-height: 100vh; display: flex; }

        .sidebar { width: 240px; background: #1a2332; display: flex; flex-direction: column; border-right: 1px solid rgba(255,255,255,0.06); position: fixed; top: 0; bottom: 0; left: 0; z-index: 100; }
        .main-content { flex: 1; margin-left: 240px; min-height: 100vh; }

        .top-bar { display: flex; justify-content: space-between; align-items: center; padding: 16px 32px; border-bottom: 1px solid rgba(255,255,255,0.06); background: #1a2332; }
        .top-bar h1 { font-size: 1.35rem; font-weight: 700; }
        .top-bar h1 .accent { color: #f59e0b; }

        .admin-tabs { display: flex; gap: 4px; padding: 12px 32px 0; background: #1a2332; }
        .admin-tab { padding: 10px 20px; border-radius: 8px 8px 0 0; font-size: 0.85rem; font-weight: 500; color: #64748b; text-decoration: none; display: flex; align-items: center; gap: 8px; transition: all 0.15s; border: 1px solid transparent; border-bottom: none; }
        .admin-tab:hover { color: #e2e8f0; background: rgba(255,255,255,0.03); }
        .admin-tab.active { color: #f59e0b; background: #0f1724; border-color: rgba(255,255,255,0.06); }

        .content { padding: 24px 32px; }

        .card { background: #1a2332; border-radius: 12px; padding: 20px; border: 1px solid rgba(255,255,255,0.06); margin-bottom: 20px; }
        .card-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; }
        .card-title { font-size: 1rem; font-weight: 600; color: #e2e8f0; display: flex; align-items: center; gap: 8px; }
        .card-title i { color: #64748b; }

        .btn { padding: 8px 16px; border-radius: 8px; font-size: 0.85rem; font-weight: 500; border: none; cursor: pointer; text-decoration: none; display: inline-flex; align-items: center; gap: 6px; transition: all 0.15s; }
        .btn-primary { background: #f59e0b; color: #000; }
        .btn-primary:hover { background: #d97706; }
        .btn-secondary { background: rgba(255,255,255,0.06); color: #e2e8f0; }
        .btn-secondary:hover { background: rgba(255,255,255,0.1); }
        .btn-danger { background: rgba(239,68,68,0.15); color: #ef4444; }
        .btn-danger:hover { background: rgba(239,68,68,0.25); }
        .btn-sm { padding: 5px 10px; font-size: 0.8rem; }

        .roles-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(350px, 1fr)); gap: 16px; }

        .role-card { background: #0f1724; border-radius: 10px; padding: 16px; border: 1px solid rgba(255,255,255,0.06); transition: all 0.15s; }
        .role-card:hover { border-color: rgba(245,158,11,0.3); }
        .role-card.admin { border-left: 3px solid #f59e0b; }
        .role-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 12px; }
        .role-name { font-size: 1rem; font-weight: 600; color: #e2e8f0; display: flex; align-items: center; gap: 8px; }
        .role-name .admin-badge { font-size: 0.65rem; background: rgba(245,158,11,0.15); color: #f59e0b; padding: 2px 8px; border-radius: 10px; font-weight: 500; }
        .role-description { font-size: 0.8rem; color: #64748b; margin-bottom: 12px; }
        .role-stats { display: flex; gap: 16px; margin-bottom: 12px; }
        .role-stat { font-size: 0.75rem; color: #94a3b8; }
        .role-stat span { color: #e2e8f0; font-weight: 600; }
        .role-actions { display: flex; gap: 8px; }

        .permissions-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(200px, 1fr)); gap: 8px; margin-top: 12px; padding-top: 12px; border-top: 1px solid rgba(255,255,255,0.06); }
        .permission-item { font-size: 0.75rem; display: flex; align-items: center; gap: 6px; color: #94a3b8; }
        .permission-item i { font-size: 0.7rem; }
        .permission-item.full { color: #10b981; }
        .permission-item.view { color: #3b82f6; }
        .permission-item.none { color: #64748b; opacity: 0.5; }

        /* Modal */
        .modal-backdrop { position: fixed; inset: 0; background: rgba(0,0,0,0.7); display: none; align-items: center; justify-content: center; z-index: 1000; }
        .modal-backdrop.active { display: flex; }
        .modal { background: #1a2332; border-radius: 16px; width: 90%; max-width: 700px; max-height: 90vh; overflow: hidden; border: 1px solid rgba(255,255,255,0.1); }
        .modal-header { padding: 20px 24px; border-bottom: 1px solid rgba(255,255,255,0.06); display: flex; justify-content: space-between; align-items: center; }
        .modal-title { font-size: 1.1rem; font-weight: 600; }
        .modal-close { background: none; border: none; color: #64748b; font-size: 1.2rem; cursor: pointer; padding: 4px; }
        .modal-close:hover { color: #e2e8f0; }
        .modal-body { padding: 24px; overflow-y: auto; max-height: calc(90vh - 140px); }
        .modal-footer { padding: 16px 24px; border-top: 1px solid rgba(255,255,255,0.06); display: flex; justify-content: flex-end; gap: 12px; }

        .form-group { margin-bottom: 16px; }
        .form-label { display: block; font-size: 0.8rem; font-weight: 500; color: #94a3b8; margin-bottom: 6px; }
        .form-input { width: 100%; padding: 10px 14px; background: #0f1724; border: 1px solid rgba(255,255,255,0.1); border-radius: 8px; color: #e2e8f0; font-size: 0.9rem; }
        .form-input:focus { outline: none; border-color: #f59e0b; }
        .form-checkbox { display: flex; align-items: center; gap: 8px; }
        .form-checkbox input { width: 16px; height: 16px; accent-color: #f59e0b; }

        .permissions-editor { margin-top: 20px; }
        .permissions-editor h4 { font-size: 0.9rem; font-weight: 600; margin-bottom: 12px; color: #e2e8f0; }
        .permission-row { display: grid; grid-template-columns: 180px repeat(5, 1fr); gap: 8px; padding: 10px 0; border-bottom: 1px solid rgba(255,255,255,0.04); align-items: center; }
        .permission-row.header { font-size: 0.7rem; color: #64748b; text-transform: uppercase; letter-spacing: 0.5px; font-weight: 600; border-bottom: 1px solid rgba(255,255,255,0.1); }
        .permission-row .module-name { font-size: 0.85rem; color: #e2e8f0; display: flex; align-items: center; gap: 8px; }
        .permission-row .module-name i { color: #64748b; font-size: 0.9rem; }
        .permission-level { text-align: center; }
        .permission-level input[type="radio"] { accent-color: #f59e0b; }

        .toast { position: fixed; bottom: 24px; right: 24px; background: #1a2332; border: 1px solid rgba(255,255,255,0.1); border-radius: 10px; padding: 14px 20px; display: none; align-items: center; gap: 10px; z-index: 1100; }
        .toast.success { border-left: 3px solid #10b981; }
        .toast.error { border-left: 3px solid #ef4444; }
        .toast.show { display: flex; animation: slideIn 0.3s ease; }
        @keyframes slideIn { from { transform: translateX(100px); opacity: 0; } to { transform: translateX(0); opacity: 1; } }

        .empty-state { text-align: center; padding: 40px; color: #64748b; }
        .empty-state i { font-size: 2.5rem; margin-bottom: 12px; opacity: 0.5; }
    </style>
</head>
<body>
    <%- include('../partials/sidebar') %>

    <div class="main-content">
        <div class="top-bar">
            <h1><span class="accent">üõ°Ô∏è Role</span> Management</h1>
            <button class="btn btn-primary" onclick="openCreateModal()"><i class="bi bi-plus-lg"></i> Create Role</button>
        </div>

        <div class="admin-tabs">
            <a href="/system" class="admin-tab"><i class="bi bi-speedometer2"></i> Overview</a>
            <a href="/system/users" class="admin-tab"><i class="bi bi-people"></i> Users</a>
            <a href="/system/roles" class="admin-tab active"><i class="bi bi-shield"></i> Roles</a>
            <a href="/system/audit" class="admin-tab"><i class="bi bi-clock-history"></i> Audit Log</a>
        </div>

        <div class="content">
            <div class="card">
                <div class="card-header">
                    <div class="card-title"><i class="bi bi-shield-check"></i> Organization Roles</div>
                    <span style="font-size: 0.8rem; color: #64748b;"><%= roles.length %> roles configured</span>
                </div>

                <% if (roles.length === 0) { %>
                    <div class="empty-state">
                        <i class="bi bi-shield-x"></i>
                        <p>No roles configured yet</p>
                        <button class="btn btn-primary" style="margin-top: 12px;" onclick="openCreateModal()">Create First Role</button>
                    </div>
                <% } else { %>
                    <div class="roles-grid">
                        <% roles.forEach(role => { %>
                            <div class="role-card <%= role.is_admin ? 'admin' : '' %>">
                                <div class="role-header">
                                    <div class="role-name">
                                        <%= role.name %>
                                        <% if (role.is_admin) { %><span class="admin-badge">ADMIN</span><% } %>
                                    </div>
                                    <div class="role-actions">
                                        <button class="btn btn-secondary btn-sm" onclick="editRole(<%= role.id %>)" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <% if (!role.is_admin) { %>
                                            <button class="btn btn-danger btn-sm" onclick="confirmDelete(<%= role.id %>, '<%= role.name %>')" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="role-description"><%= role.description || 'No description' %></div>
                                <div class="role-stats">
                                    <div class="role-stat"><span><%= role.user_count || 0 %></span> users</div>
                                    <div class="role-stat"><span><%= role.permission_count || 0 %></span> permissions</div>
                                </div>
                                <div class="permissions-grid">
                                    <% if (role.permissions && role.permissions.length > 0) { %>
                                        <% role.permissions.slice(0, 6).forEach(perm => { %>
                                            <div class="permission-item <%= perm.access_level %>">
                                                <i class="bi bi-<%= perm.access_level === 'full' ? 'check-circle-fill' : perm.access_level === 'view' ? 'eye-fill' : 'x-circle' %>"></i>
                                                <%= perm.module_name %>
                                            </div>
                                        <% }); %>
                                        <% if (role.permissions.length > 6) { %>
                                            <div class="permission-item" style="color: #64748b;">+<%= role.permissions.length - 6 %> more</div>
                                        <% } %>
                                    <% } else { %>
                                        <div class="permission-item none"><i class="bi bi-dash-circle"></i> No permissions set</div>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Create/Edit Role Modal -->
    <div class="modal-backdrop" id="roleModal">
        <div class="modal">
            <div class="modal-header">
                <div class="modal-title" id="modalTitle">Create New Role</div>
                <button class="modal-close" onclick="closeModal()"><i class="bi bi-x-lg"></i></button>
            </div>
            <div class="modal-body">
                <form id="roleForm">
                    <input type="hidden" id="roleId" name="id">
                    
                    <div class="form-group">
                        <label class="form-label">Role Name *</label>
                        <input type="text" class="form-input" id="roleName" name="name" required placeholder="e.g., Senior Associate">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Slug (URL-friendly identifier)</label>
                        <input type="text" class="form-input" id="roleSlug" name="slug" placeholder="e.g., senior-associate" pattern="[a-z0-9-]+">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-input" id="roleDescription" name="description" placeholder="Brief description of this role">
                    </div>
                    
                    <div class="form-group">
                        <label class="form-checkbox">
                            <input type="checkbox" id="roleIsAdmin" name="is_admin">
                            <span>Administrator Role (full system access)</span>
                        </label>
                    </div>

                    <div class="permissions-editor">
                        <h4><i class="bi bi-key"></i> Module Permissions</h4>
                        <div class="permission-row header">
                            <div>Module</div>
                            <div class="permission-level">None</div>
                            <div class="permission-level">View</div>
                            <div class="permission-level">Request</div>
                            <div class="permission-level">Own</div>
                            <div class="permission-level">Full</div>
                        </div>
                        <% modules.forEach(mod => { %>
                            <div class="permission-row">
                                <div class="module-name"><i class="bi bi-<%= mod.icon || 'box' %>"></i> <%= mod.name %></div>
                                <div class="permission-level"><input type="radio" name="perm_<%= mod.id %>" value="none" checked></div>
                                <div class="permission-level"><input type="radio" name="perm_<%= mod.id %>" value="view"></div>
                                <div class="permission-level"><input type="radio" name="perm_<%= mod.id %>" value="request"></div>
                                <div class="permission-level"><input type="radio" name="perm_<%= mod.id %>" value="own"></div>
                                <div class="permission-level"><input type="radio" name="perm_<%= mod.id %>" value="full"></div>
                            </div>
                        <% }); %>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                <button class="btn btn-primary" onclick="saveRole()"><i class="bi bi-check-lg"></i> Save Role</button>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal-backdrop" id="deleteModal">
        <div class="modal" style="max-width: 400px;">
            <div class="modal-header">
                <div class="modal-title">Delete Role</div>
                <button class="modal-close" onclick="closeDeleteModal()"><i class="bi bi-x-lg"></i></button>
            </div>
            <div class="modal-body">
                <p style="color: #94a3b8;">Are you sure you want to delete the role "<span id="deleteRoleName" style="color: #ef4444; font-weight: 600;"></span>"?</p>
                <p style="color: #64748b; font-size: 0.85rem; margin-top: 12px;">Users with this role will lose their permissions. This cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" onclick="closeDeleteModal()">Cancel</button>
                <button class="btn btn-danger" onclick="deleteRole()"><i class="bi bi-trash"></i> Delete</button>
            </div>
        </div>
    </div>

    <!-- Toast -->
    <div class="toast" id="toast">
        <i class="bi bi-check-circle-fill" style="color: #10b981;"></i>
        <span id="toastMessage"></span>
    </div>

    <script>
        let deleteRoleId = null;
        const modules = <%- JSON.stringify(modules) %>;

        function openCreateModal() {
            document.getElementById('modalTitle').textContent = 'Create New Role';
            document.getElementById('roleForm').reset();
            document.getElementById('roleId').value = '';
            // Reset all permissions to none
            modules.forEach(mod => {
                const radio = document.querySelector(`input[name="perm_${mod.id}"][value="none"]`);
                if (radio) radio.checked = true;
            });
            document.getElementById('roleModal').classList.add('active');
        }

        async function editRole(id) {
            try {
                const res = await fetch(`/system/api/roles/${id}`);
                const data = await res.json();
                if (!data.success) throw new Error(data.error);

                const role = data.role;
                document.getElementById('modalTitle').textContent = 'Edit Role';
                document.getElementById('roleId').value = role.id;
                document.getElementById('roleName').value = role.name;
                document.getElementById('roleSlug').value = role.slug;
                document.getElementById('roleDescription').value = role.description || '';
                document.getElementById('roleIsAdmin').checked = role.is_admin;

                // Set permissions
                modules.forEach(mod => {
                    const perm = data.permissions.find(p => p.module_id === mod.id);
                    const level = perm ? perm.access_level : 'none';
                    const radio = document.querySelector(`input[name="perm_${mod.id}"][value="${level}"]`);
                    if (radio) radio.checked = true;
                });

                document.getElementById('roleModal').classList.add('active');
            } catch (err) {
                showToast('Failed to load role: ' + err.message, 'error');
            }
        }

        function closeModal() {
            document.getElementById('roleModal').classList.remove('active');
        }

        async function saveRole() {
            const id = document.getElementById('roleId').value;
            const name = document.getElementById('roleName').value.trim();
            let slug = document.getElementById('roleSlug').value.trim();
            const description = document.getElementById('roleDescription').value.trim();
            const is_admin = document.getElementById('roleIsAdmin').checked;

            if (!name) {
                showToast('Role name is required', 'error');
                return;
            }

            // Auto-generate slug if not provided
            if (!slug) {
                slug = name.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
            }

            // Collect permissions
            const permissions = [];
            modules.forEach(mod => {
                const selected = document.querySelector(`input[name="perm_${mod.id}"]:checked`);
                if (selected && selected.value !== 'none') {
                    permissions.push({ module_id: mod.id, access_level: selected.value });
                }
            });

            try {
                const url = id ? `/system/api/roles/${id}` : '/system/api/roles';
                const method = id ? 'PUT' : 'POST';

                const res = await fetch(url, {
                    method,
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, slug, description, is_admin, permissions })
                });

                const data = await res.json();
                if (!data.success) throw new Error(data.error);

                showToast(id ? 'Role updated successfully' : 'Role created successfully', 'success');
                closeModal();
                setTimeout(() => location.reload(), 1000);
            } catch (err) {
                showToast('Failed to save role: ' + err.message, 'error');
            }
        }

        function confirmDelete(id, name) {
            deleteRoleId = id;
            document.getElementById('deleteRoleName').textContent = name;
            document.getElementById('deleteModal').classList.add('active');
        }

        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.remove('active');
            deleteRoleId = null;
        }

        async function deleteRole() {
            if (!deleteRoleId) return;

            try {
                const res = await fetch(`/system/api/roles/${deleteRoleId}`, { method: 'DELETE' });
                const data = await res.json();
                if (!data.success) throw new Error(data.error);

                showToast('Role deleted successfully', 'success');
                closeDeleteModal();
                setTimeout(() => location.reload(), 1000);
            } catch (err) {
                showToast('Failed to delete role: ' + err.message, 'error');
            }
        }

        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            const icon = toast.querySelector('i');
            document.getElementById('toastMessage').textContent = message;
            toast.className = 'toast show ' + type;
            icon.className = type === 'success' ? 'bi bi-check-circle-fill' : 'bi bi-exclamation-circle-fill';
            icon.style.color = type === 'success' ? '#10b981' : '#ef4444';
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        // Auto-generate slug from name
        document.getElementById('roleName').addEventListener('input', function() {
            const slugField = document.getElementById('roleSlug');
            if (!document.getElementById('roleId').value && !slugField.dataset.manual) {
                slugField.value = this.value.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
            }
        });

        document.getElementById('roleSlug').addEventListener('input', function() {
            this.dataset.manual = 'true';
        });
    </script>
</body>
</html>
