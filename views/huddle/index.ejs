<!DOCTYPE html>
<html lang="en" data-theme="<%= typeof theme !== 'undefined' ? theme : 'light' %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Huddle | CRE OS</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/theme.css">
    <script src="/js/theme.js"></script>
    <style>
        :root {
            --primary: #7c3aed;
            --primary-light: #a78bfa;
            --primary-dark: #5b21b6;
            --success: #10b981;
            --warning: #f59e0b;
            --danger: #ef4444;
            --gray-50: #f9fafb;
            --gray-100: #f3f4f6;
            --gray-200: #e5e7eb;
            --gray-300: #d1d5db;
            --gray-400: #9ca3af;
            --gray-500: #6b7280;
            --gray-600: #4b5563;
            --gray-700: #374151;
            --gray-800: #1f2937;
            --gray-900: #111827;
            --white: #ffffff;
            --sidebar-bg: #f8f9fc;
            --hover-bg: #f3f4f6;
            --active-bg: #ede9fe;
            --border: #e5e7eb;
        }
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--white);
            color: var(--gray-800);
            height: 100vh;
            overflow: hidden;
        }
        .huddle-container { display: flex; height: 100vh; }
        
        /* Sidebar */
        .sidebar {
            width: 260px;
            background: var(--sidebar-bg);
            border-right: 1px solid var(--border);
            display: flex;
            flex-direction: column;
            flex-shrink: 0;
        }
        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .workspace-icon {
            width: 40px;
            height: 40px;
            background: var(--primary);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .workspace-icon svg { width: 24px; height: 24px; color: white; }
        .workspace-info h1 { font-size: 15px; font-weight: 700; color: var(--gray-900); }
        .workspace-info p { font-size: 12px; color: var(--gray-500); }
        .sidebar-content { flex: 1; overflow-y: auto; padding: 16px 12px; }
        .sidebar-section { margin-bottom: 24px; }
        .section-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 8px;
            margin-bottom: 8px;
        }
        .section-title {
            font-size: 11px;
            font-weight: 600;
            color: var(--gray-500);
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .section-add {
            width: 20px;
            height: 20px;
            border-radius: 4px;
            border: none;
            background: transparent;
            color: var(--gray-400);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.15s;
        }
        .section-add:hover { background: var(--gray-200); color: var(--gray-600); }
        .channel-list { list-style: none; }
        .channel-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 8px 12px;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.15s;
            text-decoration: none;
            color: var(--gray-700);
        }
        .channel-item:hover { background: var(--hover-bg); }
        .channel-item.active { background: var(--active-bg); color: var(--primary); }
        .channel-icon { font-size: 16px; color: var(--gray-400); }
        .channel-item.active .channel-icon { color: var(--primary); }
        .channel-name { font-size: 14px; font-weight: 500; flex: 1; }
        .channel-badge {
            background: var(--primary);
            color: white;
            font-size: 11px;
            font-weight: 600;
            padding: 2px 6px;
            border-radius: 10px;
            min-width: 18px;
            text-align: center;
        }
        
        /* DM Items */
        .dm-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 8px 12px;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.15s;
        }
        .dm-item:hover { background: var(--hover-bg); }
        .dm-item.active { background: var(--active-bg); }
        .dm-avatar {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 13px;
            font-weight: 600;
            color: white;
            position: relative;
        }
        .dm-avatar.green { background: #10b981; }
        .dm-avatar.blue { background: #3b82f6; }
        .dm-avatar.purple { background: #8b5cf6; }
        .dm-avatar.orange { background: #f59e0b; }
        .dm-avatar.red { background: #ef4444; }
        .status-dot {
            position: absolute;
            bottom: -2px;
            right: -2px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            border: 2px solid var(--sidebar-bg);
        }
        .status-dot.online { background: var(--success); }
        .status-dot.away { background: var(--warning); }
        .status-dot.offline { background: var(--gray-400); }
        .dm-info { flex: 1; }
        .dm-name { font-size: 14px; font-weight: 500; color: var(--gray-800); }
        .dm-status { font-size: 12px; color: var(--gray-500); }
        
        .sidebar-footer {
            padding: 16px;
            border-top: 1px solid var(--border);
        }
        .back-link {
            display: flex;
            align-items: center;
            gap: 8px;
            color: var(--gray-500);
            text-decoration: none;
            font-size: 13px;
            font-weight: 500;
            transition: color 0.15s;
        }
        .back-link:hover { color: var(--primary); }

        /* Main Area */
        .main-area {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: var(--white);
            min-width: 0;
        }
        .chat-header {
            padding: 16px 24px;
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .chat-title { display: flex; align-items: center; gap: 12px; }
        .chat-title h2 {
            font-size: 18px;
            font-weight: 700;
            color: var(--gray-900);
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .chat-title h2 span { color: var(--gray-400); font-weight: 500; }
        .chat-description { font-size: 13px; color: var(--gray-500); }
        .chat-actions { display: flex; gap: 8px; }
        .chat-action-btn {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.15s;
            font-size: 16px;
        }
        .chat-action-btn.pin { background: #fef3c7; color: #d97706; }
        .chat-action-btn.search { background: #dbeafe; color: #2563eb; }
        .chat-action-btn.settings { background: var(--gray-100); color: var(--gray-600); }
        .chat-action-btn:hover { transform: scale(1.05); }

        /* Messages */
        .messages-area {
            flex: 1;
            overflow-y: auto;
            padding: 24px;
        }
        .date-divider {
            display: flex;
            align-items: center;
            gap: 16px;
            margin: 24px 0;
        }
        .date-divider::before, .date-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: var(--border);
        }
        .date-divider span {
            font-size: 12px;
            font-weight: 500;
            color: var(--gray-500);
        }
        .message {
            display: flex;
            gap: 12px;
            margin-bottom: 20px;
        }
        .message-avatar {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 15px;
            font-weight: 600;
            color: white;
            flex-shrink: 0;
        }
        .message-content { flex: 1; min-width: 0; }
        .message-header {
            display: flex;
            align-items: baseline;
            gap: 8px;
            margin-bottom: 4px;
        }
        .message-author { font-size: 14px; font-weight: 600; color: var(--gray-900); }
        .message-time { font-size: 12px; color: var(--gray-400); }
        .message-text {
            font-size: 14px;
            line-height: 1.5;
            color: var(--gray-700);
            word-wrap: break-word;
        }
        .message-text .mention {
            background: #fef3c7;
            color: #92400e;
            padding: 2px 4px;
            border-radius: 4px;
            font-weight: 500;
        }

        /* Message Input */
        .message-input-area {
            padding: 16px 24px 24px;
            border-top: 1px solid var(--border);
        }
        .message-input-container {
            background: var(--gray-50);
            border: 1px solid var(--border);
            border-radius: 12px;
            overflow: hidden;
        }
        .message-input {
            width: 100%;
            padding: 14px 16px;
            border: none;
            background: transparent;
            font-size: 14px;
            color: var(--gray-800);
            resize: none;
            outline: none;
        }
        .message-input::placeholder { color: var(--gray-400); }
        .message-input-actions {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 8px 12px;
            border-top: 1px solid var(--border);
            background: var(--white);
        }
        .input-tools { display: flex; gap: 4px; }
        .input-tool {
            width: 32px;
            height: 32px;
            border-radius: 6px;
            border: none;
            background: transparent;
            color: var(--gray-400);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.15s;
            font-size: 16px;
        }
        .input-tool:hover { background: var(--gray-100); color: var(--gray-600); }
        .send-btn {
            padding: 8px 16px;
            background: var(--primary);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 6px;
            transition: all 0.15s;
        }
        .send-btn:hover { background: var(--primary-dark); }
        .send-btn:disabled { background: var(--gray-300); cursor: not-allowed; }

        /* Right Sidebar */
        .members-sidebar {
            width: 240px;
            background: var(--gray-50);
            border-left: 1px solid var(--border);
            padding: 20px;
            flex-shrink: 0;
        }
        .members-header { margin-bottom: 20px; }
        .members-header h3 { font-size: 14px; font-weight: 700; color: var(--gray-800); }
        .members-header p { font-size: 12px; color: var(--gray-500); margin-top: 2px; }
        .member-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 8px;
            border-radius: 8px;
            margin-bottom: 4px;
            cursor: pointer;
            transition: all 0.15s;
        }
        .member-item:hover { background: var(--gray-100); }
        .member-avatar {
            width: 36px;
            height: 36px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            font-weight: 600;
            color: white;
            position: relative;
        }
        .member-info { flex: 1; }
        .member-name { font-size: 13px; font-weight: 600; color: var(--gray-800); }
        .member-role { font-size: 11px; color: var(--gray-500); }

        /* Modal */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.5);
            z-index: 1000;
            align-items: center;
            justify-content: center;
        }
        .modal-overlay.active { display: flex; }
        .modal {
            background: white;
            border-radius: 12px;
            padding: 24px;
            width: 400px;
            max-width: 90%;
        }
        .modal h3 { font-size: 18px; font-weight: 700; margin-bottom: 16px; }
        .user-select-item {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.15s;
        }
        .user-select-item:hover { background: var(--gray-100); }
        .modal-close {
            margin-top: 16px;
            padding: 8px 16px;
            background: var(--gray-100);
            border: none;
            border-radius: 6px;
            cursor: pointer;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="huddle-container">
        <!-- Left Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="workspace-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"></path></svg>
                </div>
                <div class="workspace-info">
                    <h1>The Huddle</h1>
                    <p><%= activeWorkspace?.name || 'CRE Consultants' %></p>
                </div>
            </div>

            <div class="sidebar-content">
                <!-- Channels -->
                <div class="sidebar-section">
                    <div class="section-header">
                        <span class="section-title">Channels</span>
                        <button class="section-add" onclick="createChannel()">+</button>
                    </div>
                    <ul class="channel-list">
                        <% if (channels && channels.length > 0) { %>
                            <% channels.forEach(channel => { %>
                            <li>
                                <a href="/huddle/channel/<%= channel.id %>" class="channel-item <%= activeChannel?.id === channel.id && !dmMode ? 'active' : '' %>">
                                    <span class="channel-icon">#</span>
                                    <span class="channel-name"><%= channel.name.toLowerCase() %></span>
                                </a>
                            </li>
                            <% }); %>
                        <% } else { %>
                            <li><a href="/huddle" class="channel-item active"><span class="channel-icon">#</span><span class="channel-name">general</span></a></li>
                        <% } %>
                    </ul>
                </div>

                <!-- Direct Messages -->
                <div class="sidebar-section">
                    <div class="section-header">
                        <span class="section-title">Direct Messages</span>
                        <button class="section-add" onclick="openNewDM()">+</button>
                    </div>
                    <div id="dmList">
                        <!-- DMs loaded dynamically -->
                    </div>
                </div>
            </div>

            <div class="sidebar-footer">
                <a href="/dashboard" class="back-link">‚Üê Back to CRE Home</a>
            </div>
        </aside>

        <!-- Main Chat Area -->
        <main class="main-area">
            <div class="chat-header">
                <div class="chat-title">
                    <div>
                        <% if (typeof dmMode !== 'undefined' && dmMode && otherParticipant) { %>
                            <h2><%= otherParticipant.name %></h2>
                            <p class="chat-description">Direct Message</p>
                        <% } else { %>
                            <h2><span>#</span> <%= activeChannel?.name?.toLowerCase() || 'general' %></h2>
                            <p class="chat-description"><%= activeChannel?.description || 'Company-wide updates and conversation' %></p>
                        <% } %>
                    </div>
                </div>
                <div class="chat-actions">
                    <button class="chat-action-btn pin" title="Pinned">üìå</button>
                    <button class="chat-action-btn search" title="Search">üîç</button>
                    <button class="chat-action-btn settings" title="Settings">‚öôÔ∏è</button>
                </div>
            </div>

            <div class="messages-area" id="messagesArea">
                <% if (messages && messages.length > 0) { %>
                    <div class="date-divider"><span>Today</span></div>
                    <% messages.forEach(msg => { 
                        const colors = ['#3b82f6', '#10b981', '#8b5cf6', '#f59e0b', '#ef4444'];
                        const color = colors[msg.user_id % colors.length];
                    %>
                    <div class="message" data-id="<%= msg.id %>">
                        <div class="message-avatar" style="background: <%= color %>">
                            <%= (msg.name || 'U').charAt(0).toUpperCase() %>
                        </div>
                        <div class="message-content">
                            <div class="message-header">
                                <span class="message-author"><%= msg.name || 'Unknown' %></span>
                                <span class="message-time"><%= new Date(msg.created_at).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %></span>
                            </div>
                            <div class="message-text"><%= msg.content %></div>
                        </div>
                    </div>
                    <% }); %>
                <% } else { %>
                    <div class="date-divider"><span>Today</span></div>
                    <div style="text-align: center; padding: 40px; color: var(--gray-500);">
                        <p>No messages yet. Start the conversation!</p>
                    </div>
                <% } %>
            </div>

            <div class="message-input-area">
                <div class="message-input-container">
                    <textarea class="message-input" id="messageInput" placeholder="<%= typeof dmMode !== 'undefined' && dmMode ? 'Message ' + (otherParticipant?.name || '') : 'Message #' + (activeChannel?.name?.toLowerCase() || 'general') %>" rows="1"></textarea>
                    <div class="message-input-actions">
                        <div class="input-tools">
                            <button class="input-tool">üìé</button>
                            <button class="input-tool">üòä</button>
                            <button class="input-tool">@</button>
                        </div>
                        <button class="send-btn" id="sendBtn" onclick="sendMessage()">Send ‚Üó</button>
                    </div>
                </div>
            </div>
        </main>

        <!-- Right Sidebar - Members (only for channels) -->
        <% if (typeof dmMode === 'undefined' || !dmMode) { %>
        <aside class="members-sidebar">
            <div class="members-header">
                <h3>Channel Members</h3>
                <p>Team members</p>
            </div>
            <div id="membersList"></div>
        </aside>
        <% } %>
    </div>

    <!-- New DM Modal -->
    <div class="modal-overlay" id="newDmModal">
        <div class="modal">
            <h3>New Direct Message</h3>
            <div id="userList"></div>
            <button class="modal-close" onclick="closeNewDM()">Cancel</button>
        </div>
    </div>

    <script>
        const currentUserId = <%= currentUser?.id || 1 %>;
        const isDmMode = <%= typeof dmMode !== 'undefined' && dmMode ? 'true' : 'false' %>;
        const activeChannelId = <%= activeChannel?.id || 'null' %>;
        const activeConversationId = <%= typeof activeConversation !== 'undefined' && activeConversation ? activeConversation.id : 'null' %>;

        // Auto-resize textarea
        const messageInput = document.getElementById('messageInput');
        messageInput.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = Math.min(this.scrollHeight, 120) + 'px';
        });

        // Send message
        async function sendMessage() {
            const content = messageInput.value.trim();
            if (!content) return;

            document.getElementById('sendBtn').disabled = true;

            try {
                let url, body;
                if (isDmMode && activeConversationId) {
                    url = '/api/huddle/conversations/' + activeConversationId + '/messages';
                    body = JSON.stringify({ content });
                } else if (activeChannelId) {
                    url = '/api/huddle/messages';
                    body = JSON.stringify({ channelId: activeChannelId, content });
                } else {
                    alert('No channel or conversation selected');
                    return;
                }

                const res = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: body
                });

                if (res.ok) {
                    messageInput.value = '';
                    messageInput.style.height = 'auto';
                    location.reload();
                } else {
                    const err = await res.json();
                    alert('Error: ' + (err.error || 'Failed to send'));
                }
            } catch (err) {
                console.error('Send error:', err);
                alert('Failed to send message');
            } finally {
                document.getElementById('sendBtn').disabled = false;
            }
        }

        // Enter to send
        messageInput.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        // Scroll to bottom
        const messagesArea = document.getElementById('messagesArea');
        messagesArea.scrollTop = messagesArea.scrollHeight;

        // Load DM conversations
        async function loadDMList() {
            try {
                const res = await fetch('/api/huddle/conversations');
                const data = await res.json();
                const dmList = document.getElementById('dmList');
                
                if (data.success && data.conversations.length > 0) {
                    dmList.innerHTML = data.conversations.map(conv => {
                        const other = conv.other_participants?.[0];
                        if (!other) return '';
                        const colors = ['green', 'blue', 'purple', 'orange', 'red'];
                        const color = colors[other.id % colors.length];
                        const isActive = isDmMode && activeConversationId === conv.id;
                        return `
                            <div class="dm-item ${isActive ? 'active' : ''}" onclick="window.location='/huddle/dm/${conv.id}'">
                                <div class="dm-avatar ${color}">
                                    ${other.name.charAt(0).toUpperCase()}
                                    <span class="status-dot online"></span>
                                </div>
                                <div class="dm-info">
                                    <div class="dm-name">${other.name}</div>
                                    <div class="dm-status">Online</div>
                                </div>
                            </div>
                        `;
                    }).join('');
                } else {
                    dmList.innerHTML = '<p style="padding: 8px 12px; color: var(--gray-500); font-size: 13px;">No conversations yet</p>';
                }
            } catch (err) {
                console.error('Load DMs error:', err);
            }
        }

        // Load users for new DM
        async function loadUsers() {
            try {
                const res = await fetch('/api/huddle/users');
                const data = await res.json();
                const userList = document.getElementById('userList');
                
                if (data.success && data.users.length > 0) {
                    userList.innerHTML = data.users.map(user => {
                        const colors = ['#3b82f6', '#10b981', '#8b5cf6', '#f59e0b', '#ef4444'];
                        const color = colors[user.id % colors.length];
                        return `
                            <div class="user-select-item" onclick="startDM(${user.id})">
                                <div class="dm-avatar" style="background: ${color}">
                                    ${user.name.charAt(0).toUpperCase()}
                                </div>
                                <div class="dm-info">
                                    <div class="dm-name">${user.name}</div>
                                    <div class="dm-status">${user.role || 'Team member'}</div>
                                </div>
                            </div>
                        `;
                    }).join('');
                } else {
                    userList.innerHTML = '<p>No users available</p>';
                }
            } catch (err) {
                console.error('Load users error:', err);
            }
        }

        // Load channel members
        async function loadMembers() {
            if (isDmMode) return;
            const membersList = document.getElementById('membersList');
            if (!membersList) return;
            
            try {
                const res = await fetch('/api/huddle/users');
                const data = await res.json();
                
                if (data.success) {
                    // Add current user first
                    const allUsers = [{ id: currentUserId, name: '<%= currentUser?.name || "You" %>', role: '<%= currentUser?.role || "Member" %>' }, ...data.users];
                    membersList.innerHTML = allUsers.map((user, i) => {
                        const colors = ['#3b82f6', '#10b981', '#8b5cf6', '#f59e0b', '#ef4444'];
                        const color = colors[user.id % colors.length];
                        return `
                            <div class="member-item" onclick="startDM(${user.id})">
                                <div class="member-avatar" style="background: ${color}">
                                    ${user.name.charAt(0).toUpperCase()}
                                    <span class="status-dot online"></span>
                                </div>
                                <div class="member-info">
                                    <div class="member-name">${user.name}${user.id === currentUserId ? ' ‚Ä¢ You' : ''}</div>
                                    <div class="member-role">${user.role}</div>
                                </div>
                            </div>
                        `;
                    }).join('');
                }
            } catch (err) {
                console.error('Load members error:', err);
            }
        }

        // Start a DM
        async function startDM(userId) {
            if (userId === currentUserId) return;
            try {
                const res = await fetch('/api/huddle/conversations', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ recipientId: userId })
                });
                const data = await res.json();
                if (data.success) {
                    window.location = '/huddle/dm/' + data.conversation.id;
                }
            } catch (err) {
                console.error('Start DM error:', err);
            }
        }

        function openNewDM() {
            loadUsers();
            document.getElementById('newDmModal').classList.add('active');
        }

        function closeNewDM() {
            document.getElementById('newDmModal').classList.remove('active');
        }

        function createChannel() {
            const name = prompt('Channel name:');
            if (name) {
                fetch('/api/huddle/channels', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, workspaceId: <%= activeWorkspace?.id || 1 %> })
                }).then(() => location.reload());
            }
        }

        // Initialize
        loadDMList();
        loadMembers();
    </script>
</body>
</html>
