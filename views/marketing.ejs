<body>
<div class="layout">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-brand">CRE <span>OS</span></div>
        <nav class="sidebar-nav">
            <a href="/dashboard"><i class="bi bi-grid-1x2"></i> Dashboard</a>
            <% if (features.crm !== false) { %>
            <a href="/crm"><i class="bi bi-funnel"></i> CRM</a>
            <% } %>
            <% if (features.intel !== false) { %>
            <a href="/intel"><i class="bi bi-easel"></i> INTEL</a>
            <% } %>
            <a href="/marketing" class="active"><i class="bi bi-megaphone"></i> Marketing</a>
            <% if (features.huddle !== false) { %>
            <a href="/huddle"><i class="bi bi-chat-dots"></i> Huddle</a>
            <% } %>
            <% if (features.vault !== false) { %>
            <a href="/vault"><i class="bi bi-safe"></i> Vault</a>
            <% } %>
            <% if (features.cfo !== false) { %>
            <a href="/cfo"><i class="bi bi-graph-up-arrow"></i> CFO</a>
            <% } %>

            <div class="sidebar-section">Data</div>
            <% if (features.danimal !== false) { %>
            <a href="/danimal"><i class="bi bi-database"></i> Danimal Data</a>
            <% } %>
            <% if (features.command !== false) { %>
            <a href="/command"><i class="bi bi-terminal"></i> Command</a>
            <% } %>
            <div class="sidebar-section">Account</div>
            <a href="/settings"><i class="bi bi-gear"></i> Settings</a>
        </nav>
    </aside>

    <!-- Main Content -->
    <div class="main">
        <div class="top-bar">
            <h1><i class="bi bi-megaphone"></i> Marketing Suite</h1>
            <div style="display:flex;gap:8px;">
                <button class="btn btn-outline" onclick="refreshDrafts()"><i class="bi bi-arrow-clockwise"></i> Refresh</button>
                <button class="btn btn-primary" onclick="window.location.href='/crm'"><i class="bi bi-plus-lg"></i> New from CRM</button>
            </div>
        </div>

        <div class="content">
            <!-- Stats -->
            <div class="stats-grid" id="statsGrid">
                <div class="stat-card">
                    <div class="stat-label">Total Drafts</div>
                    <div class="stat-value" id="statTotal">-</div>
                    <div class="stat-sub">All marketing packages</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Awaiting Review</div>
                    <div class="stat-value amber" id="statReview">-</div>
                    <div class="stat-sub">Needs marketing team action</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Pending Approval</div>
                    <div class="stat-value purple" id="statApproval">-</div>
                    <div class="stat-sub">Waiting on broker sign-off</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Approved</div>
                    <div class="stat-value green" id="statApproved">-</div>
                    <div class="stat-sub">Ready for distribution</div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Distributed</div>
                    <div class="stat-value blue" id="statDistributed">-</div>
                    <div class="stat-sub">Live on channels</div>
                </div>
            </div>

            <!-- Filter Bar -->
            <div class="filter-bar">
                <button class="filter-btn active" data-filter="all" onclick="filterDrafts('all', this)">All</button>
                <button class="filter-btn" data-filter="pending" onclick="filterDrafts('pending', this)">Pending</button>
                <button class="filter-btn" data-filter="ready" onclick="filterDrafts('ready', this)">Ready</button>
                <button class="filter-btn" data-filter="generating" onclick="filterDrafts('generating', this)">Generating</button>
                <button class="filter-btn" data-filter="review" onclick="filterDrafts('review', this)">In Review</button>
                <button class="filter-btn" data-filter="approval" onclick="filterDrafts('approval', this)">Approval</button>
                <button class="filter-btn" data-filter="approved" onclick="filterDrafts('approved', this)">Approved</button>
                <button class="filter-btn" data-filter="distributed" onclick="filterDrafts('distributed', this)">Distributed</button>
                <button class="filter-btn" data-filter="failed" onclick="filterDrafts('failed', this)">Failed</button>
            </div>

            <!-- Drafts Table -->
            <div class="drafts-table-wrap">
                <table class="drafts-table">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Status</th>
                            <th>Quality</th>
                            <th>AI Model</th>
                            <th>Pages</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="draftsBody">
                        <tr>
                            <td colspan="7">
                                <div class="empty-state">
                                    <i class="bi bi-megaphone"></i>
                                    <h3>No marketing drafts yet</h3>
                                    <p>When CRM deals move to "Closed Won," marketing packages are auto-generated here. You can also create drafts from the CRM.</p>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="toast-container" id="toastContainer"></div>

<script>
    let allDrafts = [];
    let currentFilter = 'all';

    // ── Load Drafts ─────────────────────────────────────────────
    async function loadDrafts() {
        try {
            const res = await fetch('/api/marketing/drafts?limit=100');
            const data = await res.json();
            allDrafts = data.drafts || [];
            updateStats();
            renderDrafts();
        } catch (err) {
            console.error('Failed to load drafts:', err);
        }
    }

    function updateStats() {
        const counts = { total: allDrafts.length, review: 0, approval: 0, approved: 0, distributed: 0 };
        allDrafts.forEach(d => {
            if (d.status === 'review' || d.status === 'revision') counts.review++;
            if (d.status === 'approval') counts.approval++;
            if (d.status === 'approved') counts.approved++;
            if (d.status === 'distributed') counts.distributed++;
        });
        document.getElementById('statTotal').textContent = counts.total;
        document.getElementById('statReview').textContent = counts.review;
        document.getElementById('statApproval').textContent = counts.approval;
        document.getElementById('statApproved').textContent = counts.approved;
        document.getElementById('statDistributed').textContent = counts.distributed;
    }

    function filterDrafts(filter, btn) {
        currentFilter = filter;
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        if (btn) btn.classList.add('active');
        renderDrafts();
    }

    function renderDrafts() {
        const filtered = currentFilter === 'all' ? allDrafts : allDrafts.filter(d => d.status === currentFilter);
        const tbody = document.getElementById('draftsBody');

        if (filtered.length === 0) {
            tbody.innerHTML = `<tr><td colspan="7">
                <div class="empty-state">
                    <i class="bi bi-megaphone"></i>
                    <h3>${currentFilter === 'all' ? 'No marketing drafts yet' : 'No drafts with status "' + currentFilter + '"'}</h3>
                    <p>When CRM deals move to "Closed Won," marketing packages are auto-generated here.</p>
                </div></td></tr>`;
            return;
        }

        tbody.innerHTML = filtered.map(d => {
            const created = new Date(d.created_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
            const pages = (d.template_sequence || []).length;
            const qs = d.quality_score;
            const qClass = qs >= 70 ? 'quality-high' : qs >= 40 ? 'quality-medium' : 'quality-low';

            return `<tr>
                <td>
                    <div class="draft-property">Listing #${d.listing_id}</div>
                    <div class="draft-address">${d.id.slice(0, 8)}...</div>
                </td>
                <td>${statusBadge(d.status)}</td>
                <td>${qs !== null ? `<span class="quality-bar"><span class="quality-fill ${qClass}" style="width:${qs}%"></span></span>${qs}%` : '<span style="color:var(--text-light)">—</span>'}</td>
                <td style="font-size:12px;color:var(--text-muted)">${d.ai_model || '—'}</td>
                <td>${pages > 0 ? pages + 'p' : '—'}</td>
                <td style="font-size:13px;color:var(--text-muted)">${created}</td>
                <td>${actionButtons(d)}</td>
            </tr>`;
        }).join('');
    }

    function statusBadge(status) {
        const icons = {
            pending: 'bi-hourglass-split', ready: 'bi-check-circle', generating: 'bi-cpu',
            review: 'bi-eye', revision: 'bi-pencil', approval: 'bi-person-check',
            approved: 'bi-check2-all', distributed: 'bi-broadcast', failed: 'bi-exclamation-triangle'
        };
        return `<span class="badge badge-${status}"><i class="bi ${icons[status] || 'bi-circle'}"></i> ${status.charAt(0).toUpperCase() + status.slice(1)}</span>`;
    }

    function actionButtons(draft) {
        const btns = [];
        switch (draft.status) {
            case 'pending':
            case 'ready':
                btns.push(`<button class="btn btn-primary btn-sm" onclick="generateDraft('${draft.id}')"><i class="bi bi-cpu"></i> Generate</button>`);
                break;
            case 'review':
                btns.push(`<button class="btn btn-primary btn-sm" onclick="transitionDraft('${draft.id}', 'submit_for_approval')"><i class="bi bi-send"></i> Send to Broker</button>`);
                if (draft.pdf_url) btns.push(`<a class="btn btn-outline btn-sm" href="${draft.pdf_url}" target="_blank"><i class="bi bi-file-pdf"></i> PDF</a>`);
                break;
            case 'approval':
                btns.push(`<button class="btn btn-primary btn-sm" onclick="transitionDraft('${draft.id}', 'approve')"><i class="bi bi-check-lg"></i> Approve</button>`);
                btns.push(`<button class="btn btn-outline btn-sm" onclick="requestRevisions('${draft.id}')"><i class="bi bi-pencil"></i> Revise</button>`);
                break;
            case 'approved':
                btns.push(`<button class="btn btn-primary btn-sm" onclick="transitionDraft('${draft.id}', 'distribute')"><i class="bi bi-broadcast"></i> Distribute</button>`);
                break;
            case 'failed':
                btns.push(`<button class="btn btn-danger btn-sm" onclick="transitionDraft('${draft.id}', 'retry')"><i class="bi bi-arrow-clockwise"></i> Retry</button>`);
                break;
            case 'distributed':
                if (draft.pdf_url) btns.push(`<a class="btn btn-outline btn-sm" href="${draft.pdf_url}" target="_blank"><i class="bi bi-file-pdf"></i> PDF</a>`);
                break;
        }
        return btns.join(' ');
    }

    // ── Workflow Actions ────────────────────────────────────────
    async function generateDraft(id) {
        try {
            // First validate if pending
            const draft = allDrafts.find(d => d.id === id);
            if (draft && draft.status === 'pending') {
                await fetch(`/api/marketing/drafts/${id}/transition`, {
                    method: 'POST', headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ transition: 'validate', listing: { address: 'From CRM', listing_type: 'for_sale', broker: 'CRE Consultants', photo_count: 1 } })
                });
            }
            const res = await fetch(`/api/marketing/drafts/${id}/generate`, { method: 'POST' });
            const data = await res.json();
            if (data.success) {
                showToast('Generation started — AI pipeline running...', 'success');
                startGenerationPolling();
            } else {
                showToast(data.error || 'Generation failed', 'error');
            }
        } catch (err) { showToast('Error: ' + err.message, 'error'); }
    }

    async function transitionDraft(id, transition, params = {}) {
        try {
            const res = await fetch(`/api/marketing/drafts/${id}/transition`, {
                method: 'POST', headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ transition, ...params })
            });
            const data = await res.json();
            if (data.success) {
                showToast(`Draft moved to "${data.draft.status}"`, 'success');
                loadDrafts();
            } else {
                showToast(data.error || 'Transition failed', 'error');
            }
        } catch (err) { showToast('Error: ' + err.message, 'error'); }
    }

    async function requestRevisions(id) {
        const comments = prompt('Enter revision comments for the marketing team:');
        if (comments && comments.trim()) {
            transitionDraft(id, 'request_revisions', { comments });
        }
    }

    function refreshDrafts() { loadDrafts(); showToast('Refreshed', 'success'); }

    function showToast(msg, type) {
        const toast = document.createElement('div');
        toast.className = `toast toast-${type}`;
        toast.textContent = msg;
        document.getElementById('toastContainer').appendChild(toast);
        setTimeout(() => toast.remove(), 4000);
    }

// Auto-poll while any draft is generating
    let pollingInterval = null;
    function startGenerationPolling() {
        if (pollingInterval) return;
        pollingInterval = setInterval(async () => {
            await loadDrafts();
            const stillGenerating = allDrafts.some(d => d.status === 'generating');
            if (!stillGenerating) {
                clearInterval(pollingInterval);
                pollingInterval = null;
                const reviewDraft = allDrafts.find(d => d.status === 'review');
                if (reviewDraft) showToast('Flyer generated — ready for review!', 'success');
            }
        }, 3000);
    }

    // Load on page ready
    loadDrafts().then(() => {
        if (allDrafts.some(d => d.status === 'generating')) startGenerationPolling();
    });
</script>
</body>
