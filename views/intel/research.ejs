    <script>
        // ── State ──
        let messages = [];
        let attachedFiles = [];
        let activeReport = null;
        let isLoading = false;

        const REPORT_META = {
            cma:  { label: 'CMA', full: 'Comparative Market Analysis', color: '#3b82f6', icon: 'bi-bar-chart-line' },
            swot: { label: 'SWOT', full: 'SWOT Analysis', color: '#f59e0b', icon: 'bi-bullseye' },
            cim:  { label: 'CIM', full: 'Confidential Information Memorandum', color: '#8b5cf6', icon: 'bi-lock' },
            bov:  { label: 'BOV', full: 'Broker Opinion of Value', color: '#10b981', icon: 'bi-cash-coin' },
            om:   { label: 'OM', full: 'Offering Memorandum', color: '#ef4444', icon: 'bi-file-earmark-richtext' },
            market_report: { label: 'Market Report', full: 'Market Report / Newsletter', color: '#06b6d4', icon: 'bi-newspaper' }
        };
        let activeCadence = null;

        // ── Drag & Drop ──
        document.body.addEventListener('dragover', (e) => { e.preventDefault(); document.getElementById('dragOverlay').classList.add('visible'); });
        document.getElementById('dragOverlay').addEventListener('dragleave', () => { document.getElementById('dragOverlay').classList.remove('visible'); });
        document.getElementById('dragOverlay').addEventListener('drop', (e) => {
            e.preventDefault();
            document.getElementById('dragOverlay').classList.remove('visible');
            handleFileSelect(e.dataTransfer.files);
        });

        // ── File Handling ──
        function handleFileSelect(fileList) {
            const arr = Array.from(fileList);
            attachedFiles = [...attachedFiles, ...arr].slice(0, 10);
            renderAttachedFiles();
            updateSendBtn();
        }

        function removeFile(idx) {
            attachedFiles.splice(idx, 1);
            renderAttachedFiles();
            updateSendBtn();
        }

        function renderAttachedFiles() {
            const container = document.getElementById('attachedFiles');
            if (attachedFiles.length === 0) { container.innerHTML = ''; return; }
            const extColors = { pdf:'#ef4444', xlsx:'#10b981', xls:'#10b981', csv:'#f59e0b', doc:'#3b82f6', docx:'#3b82f6', png:'#8b5cf6', jpg:'#8b5cf6', jpeg:'#8b5cf6', txt:'#64748b' };
            container.innerHTML = attachedFiles.map((f, i) => {
                const ext = f.name.split('.').pop().toLowerCase();
                const c = extColors[ext] || '#64748b';
                return `<div class="attached-chip" style="background:${c}15;border:1px solid ${c}40">
                    <span class="ext" style="color:${c}">${ext}</span>
                    <span class="fname">${f.name}</span>
                    <button class="remove-file" onclick="removeFile(${i})">×</button>
                </div>`;
            }).join('');
        }

        // ── Report Type ──
        function selectReportType(type, prefill) {
            activeReport = type;
            renderActiveReport();
            const ta = document.getElementById('chatInput');
            ta.value = prefill;
            ta.focus();
            autoResize(ta);
            updateSendBtn();
        }

        function pickReport(type) {
            activeReport = (activeReport === type) ? null : type;
            if (type !== 'market_report') {
                activeCadence = null;
                document.getElementById('cadenceOptions').style.display = 'none';
                toggleReportMenu();
            } else {
                document.getElementById('cadenceOptions').style.display = 'block';
                // Don't close menu — let them pick cadence
            }
            renderActiveReport();
            updateReportMenuBtn();
        }

        function clearReport() {
            activeReport = null;
            activeCadence = null;
            renderActiveReport();
            updateReportMenuBtn();
        }

        function selectMarketReport() {
            activeReport = 'market_report';
            renderActiveReport();
            // Show cadence picker inline
            const ta = document.getElementById('chatInput');
            ta.value = '';
            ta.focus();
            // Open report menu to show cadence options
            document.getElementById('reportMenu').classList.add('open');
            document.getElementById('cadenceOptions').style.display = 'block';
        }

        function pickCadence(cadence) {
            activeCadence = cadence;
            document.querySelectorAll('.cadence-btn').forEach(b => b.classList.remove('active'));
            event.target.classList.add('active');
            document.getElementById('reportMenu').classList.remove('open');
            renderActiveReport();
            const ta = document.getElementById('chatInput');
            ta.value = `Generate a ${cadence} market report for `;
            ta.focus();
            autoResize(ta);
            updateSendBtn();
        }

        function renderActiveReport() {
            const container = document.getElementById('activeReportTag');
            if (!activeReport) { container.style.display = 'none'; return; }
            const r = REPORT_META[activeReport];
            let label = r.full;
            if (activeReport === 'market_report' && activeCadence) {
                label = activeCadence.charAt(0).toUpperCase() + activeCadence.slice(1) + ' ' + r.full;
            }
            container.style.display = 'flex';
            container.innerHTML = `<span class="active-report-badge" style="background:${r.color}18;border:1px solid ${r.color}35;color:${r.color}">
                <i class="bi ${r.icon}"></i> ${label}
                <button onclick="clearReport()">×</button>
            </span>`;
        }

        function toggleReportMenu() {
            const menu = document.getElementById('reportMenu');
            menu.classList.toggle('open');
            // Show cadence options if market report is selected
            const cadenceEl = document.getElementById('cadenceOptions');
            if (cadenceEl) cadenceEl.style.display = (activeReport === 'market_report') ? 'block' : 'none';
        }

        function updateReportMenuBtn() {
            const btn = document.getElementById('reportMenuBtn');
            if (activeReport) {
                const r = REPORT_META[activeReport];
                btn.style.background = r.color + '18';
                btn.style.borderColor = r.color + '35';
                btn.style.color = r.color;
            } else {
                btn.style.background = '';
                btn.style.borderColor = '';
                btn.style.color = '';
            }
        }

        // Close report menu on outside click
        document.addEventListener('click', (e) => {
            if (!e.target.closest('#reportMenuBtn') && !e.target.closest('#reportMenu')) {
                document.getElementById('reportMenu').classList.remove('open');
            }
        });

        // ── Input ──
        function autoResize(el) {
            el.style.height = 'auto';
            el.style.height = Math.min(el.scrollHeight, 160) + 'px';
        }

        function updateSendBtn() {
            const btn = document.getElementById('sendBtn');
            const hasContent = document.getElementById('chatInput').value.trim() || attachedFiles.length > 0;
            btn.classList.toggle('active', hasContent && !isLoading);
        }

        function handleKeyDown(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        }

        function useSample(prompt) {
            const ta = document.getElementById('chatInput');
            ta.value = prompt;
            ta.focus();
            autoResize(ta);
            updateSendBtn();
        }

        // ── Scrolling ──
        function scrollToBottom() {
            document.getElementById('scrollAnchor').scrollIntoView({ behavior: 'smooth' });
        }

        // ── Rendering ──
        function renderMessage(msg) {
            const container = document.getElementById('messagesContainer');
            const div = document.createElement('div');
            div.className = `message ${msg.role}`;
            div.style.animation = 'fadeUp 0.3s ease-out';

            if (msg.role === 'system') {
                div.innerHTML = `<div class="msg-bubble"><i class="bi bi-search"></i> ${escapeHtml(msg.content)}</div>`;
            } else if (msg.role === 'user') {
                let inner = '<div class="msg-inner">';
                inner += '<div>';
                if (msg.files && msg.files.length) {
                    inner += '<div class="file-chips">' + msg.files.map(f => `<span class="file-chip"><i class="bi bi-paperclip"></i> ${escapeHtml(f)}</span>`).join('') + '</div>';
                }
                if (msg.reportType) {
                    const r = REPORT_META[msg.reportType];
                    let tagLabel = r.full;
                    if (msg.reportType === 'market_report' && msg.reportCadence) {
                        tagLabel = msg.reportCadence.charAt(0).toUpperCase() + msg.reportCadence.slice(1) + ' ' + r.full;
                    }
                    inner += `<div class="report-tag" style="background:${r.color}18;border:1px solid ${r.color}35;color:${r.color}"><i class="bi ${r.icon}"></i> ${tagLabel}</div>`;
                }
                inner += `<div class="msg-bubble">${escapeHtml(msg.content)}</div>`;
                inner += '</div></div>';
                div.innerHTML = inner;
            } else {
                let inner = '<div class="msg-inner">';
                inner += '<div class="ai-avatar"><i class="bi bi-cpu"></i></div>';
                inner += `<div><div class="msg-bubble">${formatAIResponse(msg.content)}</div></div>`;
                inner += '</div>';
                div.innerHTML = inner;
            }

            container.appendChild(div);
            scrollToBottom();
        }

        function showTyping() {
            const container = document.getElementById('messagesContainer');
            const div = document.createElement('div');
            div.id = 'typingIndicator';
            div.className = 'typing';
            div.innerHTML = `<div class="ai-avatar"><i class="bi bi-cpu"></i></div>
                <div class="typing-dots">
                    <div class="typing-dot"></div><div class="typing-dot"></div><div class="typing-dot"></div>
                    <span class="typing-label">Analyzing data sources...</span>
                </div>`;
            container.appendChild(div);
            scrollToBottom();
        }

        function hideTyping() {
            const el = document.getElementById('typingIndicator');
            if (el) el.remove();
        }

        function formatAIResponse(text) {
            // Basic markdown-ish formatting
            let html = escapeHtml(text);
            // Bold
            html = html.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
            // Headers (### and ##)
            html = html.replace(/^### (.*$)/gm, '<h3>$1</h3>');
            html = html.replace(/^## (.*$)/gm, '<h3>$1</h3>');
            // Horizontal rules
            html = html.replace(/^---$/gm, '<hr>');
            // Bullet lists
            html = html.replace(/^[•\-] (.*$)/gm, '<li>$1</li>');
            html = html.replace(/(<li>.*<\/li>\n?)+/g, '<ul>$&</ul>');
            // Numbered lists
            html = html.replace(/^\d+\. (.*$)/gm, '<li>$1</li>');
            // Inline code
            html = html.replace(/`(.*?)`/g, '<code>$1</code>');
            // Line breaks
            html = html.replace(/\n/g, '<br>');
            // Clean up
            html = html.replace(/<br><h3>/g, '<h3>');
            html = html.replace(/<\/h3><br>/g, '</h3>');
            html = html.replace(/<br><hr>/g, '<hr>');
            html = html.replace(/<hr><br>/g, '<hr>');
            html = html.replace(/<br><ul>/g, '<ul>');
            html = html.replace(/<\/ul><br>/g, '</ul>');
            return html;
        }

        function escapeHtml(text) {
            const d = document.createElement('div');
            d.textContent = text;
            return d.innerHTML;
        }

        // ── Send Message ──
        async function sendMessage() {
            const ta = document.getElementById('chatInput');
            const content = ta.value.trim();
            if (!content && attachedFiles.length === 0) return;
            if (isLoading) return;

            document.getElementById('welcomeState').style.display = 'none';

            const userMsg = {
                role: 'user',
                content: content || 'Please analyze the attached files.',
                files: attachedFiles.map(f => f.name),
                reportType: activeReport,
                reportCadence: activeCadence
            };
            messages.push(userMsg);
            renderMessage(userMsg);

            const currentReport = activeReport;
            const currentCadence = activeCadence;
            const currentFiles = [...attachedFiles];
            ta.value = '';
            autoResize(ta);
            attachedFiles = [];
            renderAttachedFiles();
            activeReport = null;
            activeCadence = null;
            renderActiveReport();
            updateReportMenuBtn();
            updateSendBtn();

            const reportLabel = currentReport ? REPORT_META[currentReport].label + (currentCadence ? ' (' + currentCadence + ')' : '') : null;
            const sources = ['The Adam Project', 'Danimal Data', reportLabel, currentFiles.length ? 'File Analysis' : null, 'Census Demographics', 'FDOT Traffic', 'Property Records', 'Web Search'].filter(Boolean);
            const sysMsg = { role: 'system', content: 'Querying data sources: ' + sources.join(' \u2192 ') };
            renderMessage(sysMsg);

            isLoading = true;
            updateSendBtn();
            showTyping();

            try {
                const apiMessages = messages
                    .filter(m => m.role !== 'system')
                    .map(m => ({ role: m.role === 'assistant' ? 'assistant' : 'user', content: m.content }));

                let response;
                
                if (currentFiles.length > 0) {
                    const formData = new FormData();
                    formData.append('messages', JSON.stringify(apiMessages));
                    if (currentReport) formData.append('reportType', currentReport);
                    if (currentCadence) formData.append('reportCadence', currentCadence);
                    formData.append('fileNames', JSON.stringify(currentFiles.map(f => f.name)));
                    currentFiles.forEach(f => formData.append('files', f));
                    
                    response = await fetch('/api/intel/ai/chat', {
                        method: 'POST',
                        body: formData
                    });
                } else {
                    response = await fetch('/api/intel/ai/chat', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            messages: apiMessages,
                            reportType: currentReport,
                            reportCadence: currentCadence,
                            files: []
                        })
                    });
                }

                const data = await response.json();
                hideTyping();

                if (data.success && data.response) {
                    const aiMsg = { role: 'assistant', content: data.response };
                    messages.push(aiMsg);
                    renderMessage(aiMsg);
                    
                    const enrichDiv = document.createElement('div');
                    enrichDiv.style.cssText = 'display:flex;gap:6px;flex-wrap:wrap;padding:2px 42px 8px;animation:fadeUp 0.3s ease-out;';
                    let chips = '';
                    if (data.adamProjectStored > 0) {
                        chips += '<span class="enrichment-chip" style="background:rgba(245,158,11,0.08);border-color:rgba(245,158,11,0.2);color:#f59e0b;"><i class="bi bi-database-add"></i> +' + data.adamProjectStored + ' to Adam Project</span>';
                    }
                    if (data.filesProcessed && data.filesProcessed.length > 0) {
                        data.filesProcessed.forEach(function(f) {
                            chips += '<span class="enrichment-chip" style="background:rgba(139,92,246,0.08);border-color:rgba(139,92,246,0.2);color:#a78bfa;"><i class="bi bi-file-check"></i> ' + f.name + ' (' + f.rows + ' rows)</span>';
                        });
                    }
                    if (data.enrichment) {
                        data.enrichment.forEach(function(src) {
                            chips += '<span class="enrichment-chip"><i class="bi bi-database"></i> ' + src + '</span>';
                        });
                    }
                    if (data.searchUsed) {
                        chips += '<span class="enrichment-chip search"><i class="bi bi-globe2"></i> Web Search</span>';
                    }
                    if (chips) {
                        enrichDiv.innerHTML = chips;
                        document.getElementById('messagesContainer').appendChild(enrichDiv);
                    }
                    
                   // Always show export buttons for AI responses
                    const exportDiv = document.createElement('div');
                    exportDiv.style.cssText = 'padding:4px 42px 12px;display:flex;gap:8px;animation:fadeUp 0.3s ease-out;';
                    exportDiv.innerHTML = '<button onclick="exportReport(\'xlsx\')" style="background:rgba(16,185,129,0.12);border:1px solid rgba(16,185,129,0.3);border-radius:8px;padding:8px 16px;color:#10b981;font-size:0.82rem;font-weight:600;cursor:pointer;display:inline-flex;align-items:center;gap:6px;font-family:inherit;transition:all 0.15s;" onmouseover="this.style.background=\'rgba(16,185,129,0.2)\'" onmouseout="this.style.background=\'rgba(16,185,129,0.12)\'"><i class="bi bi-file-earmark-spreadsheet"></i> Export Excel</button>'
                        + '<button onclick="exportReport(\'docx\')" style="background:rgba(59,130,246,0.12);border:1px solid rgba(59,130,246,0.3);border-radius:8px;padding:8px 16px;color:#3b82f6;font-size:0.82rem;font-weight:600;cursor:pointer;display:inline-flex;align-items:center;gap:6px;font-family:inherit;transition:all 0.15s;" onmouseover="this.style.background=\'rgba(59,130,246,0.2)\'" onmouseout="this.style.background=\'rgba(59,130,246,0.12)\'"><i class="bi bi-file-earmark-word"></i> Export Word</button>';
                    document.getElementById('messagesContainer').appendChild(exportDiv);
                } else {
                    const errMsg = { role: 'assistant', content: data.error || 'Error processing request.' };
                    messages.push(errMsg);
                    renderMessage(errMsg);
                }
            } catch (err) {
                hideTyping();
                const errMsg = { role: 'assistant', content: 'I apologize \u2014 I\'m having trouble connecting to the analysis engine. Please try again in a moment.' };
                messages.push(errMsg);
                renderMessage(errMsg);
            }

            isLoading = false;
            updateSendBtn();
        }
        
        async function exportReport(format) {
            const lastAI = [...messages].reverse().find(function(m) { return m.role === 'assistant'; });
            if (!lastAI) { alert('No report to export.'); return; }
            
            try {
                const resp = await fetch('/api/intel/ai/export', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ exportData: lastAI.content, format: format })
                });
                
                if (resp.ok) {
                    const blob = await resp.blob();
                    const url = URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    a.download = 'INTEL_Report_' + new Date().toISOString().split('T')[0] + '.' + format;
                    a.click();
                    URL.revokeObjectURL(url);
                } else {
                    const err = await resp.json();
                    alert(err.error || 'Export failed.');
                }
            } catch (err) {
                alert('Export error: ' + err.message);
            }
        }   
    </script>
