        function renderConversationList(convos) {
            const list = document.getElementById('convList');
            if (!convos.length) {
                list.innerHTML = '<div class="conv-empty"><i class="bi bi-chat-left-text"></i>No conversations yet<br><small>Start a new research chat</small></div>';
                return;
            }
            list.innerHTML = convos.map(function(c) {
