                await fetch('/api/intel/conversations/' + currentConvoId + '/messages', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ role: role, content: content, report_type: activeReportType || null })
                });
