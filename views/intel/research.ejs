    <script>
        // Ã¢â€â‚¬Ã¢â€â‚¬ State Ã¢â€â‚¬Ã¢â€â‚¬
        let messages = [];
        let attachedFiles = [];
        let activeReport = null;
        let isLoading = false;

        const REPORT_META = {
            cma:  { label: 'CMA', full: 'Comparative Market Analysis', color: '#3b82f6', icon: 'bi-bar-chart-line' },
            swot: { label: 'SWOT', full: 'SWOT Analysis', color: '#f59e0b', icon: 'bi-bullseye' },
            cim:  { label: 'CIM', full: 'Confidential Information Memorandum', color: '#8b5cf6', icon: 'bi-lock' },
            bov:  { label: 'BOV', full: 'Broker Opinion of Value', color: '#10b981', icon: 'bi-cash-coin' },
            om:   { label: 'OM', full: 'Offering Memorandum', color: '#ef4444', icon: 'bi-file-earmark-richtext' },
            market_report: { label: 'Market Report', full: 'Market Report / Newsletter', color: '#06b6d4', icon: 'bi-newspaper' }
        };
        let activeCadence = null;

        // Ã¢â€â‚¬Ã¢â€â‚¬ Drag & Drop Ã¢â€â‚¬Ã¢â€â‚¬
        document.body.addEventListener('dragover', (e) => { e.preventDefault(); document.getElementById('dragOverlay').classList.add('visible'); });
        document.getElementById('dragOverlay').addEventListener('dragleave', () => { document.getElementById('dragOverlay').classList.remove('visible'); });
        document.getElementById('dragOverlay').addEventListener('drop', (e) => {
            e.preventDefault();
            document.getElementById('dragOverlay').classList.remove('visible');
            handleFileSelect(e.dataTransfer.files);
        });

        // Ã¢â€â‚¬Ã¢â€â‚¬ File Handling Ã¢â€â‚¬Ã¢â€â‚¬
        function handleFileSelect(fileList) {
            const arr = Array.from(fileList);
            attachedFiles = [...attachedFiles, ...arr].slice(0, 10);
            renderAttachedFiles();
            updateSendBtn();
        }

        function removeFile(idx) {
            attachedFiles.splice(idx, 1);
            renderAttachedFiles();
            updateSendBtn();
        }

        function renderAttachedFiles() {
            const container = document.getElementById('attachedFiles');
            if (attachedFiles.length === 0) { container.innerHTML = ''; return; }
            const extColors = { pdf:'#ef4444', xlsx:'#10b981', xls:'#10b981', csv:'#f59e0b', doc:'#3b82f6', docx:'#3b82f6', png:'#8b5cf6', jpg:'#8b5cf6', jpeg:'#8b5cf6', txt:'#64748b' };
            container.innerHTML = attachedFiles.map((f, i) => {
                const ext = f.name.split('.').pop().toLowerCase();
                const c = extColors[ext] || '#64748b';
                return `<div class="attached-chip" style="background:${c}15;border:1px solid ${c}40">
                    <span class="ext" style="color:${c}">${ext}</span>
                    <span class="fname">${f.name}</span>
                    <button class="remove-file" onclick="removeFile(${i})">Ãƒâ€”</button>
                </div>`;
            }).join('');
        }

        // Ã¢â€â‚¬Ã¢â€â‚¬ Report Type Ã¢â€â‚¬Ã¢â€â‚¬
        function selectReportType(type, prefill) {
            activeReport = type;
            renderActiveReport();
            const ta = document.getElementById('chatInput');
            ta.value = prefill;
            ta.focus();
            autoResize(ta);
            updateSendBtn();
        }

        function pickReport(type) {
            activeReport = (activeReport === type) ? null : type;
            if (type !== 'market_report') {
                activeCadence = null;
                document.getElementById('cadenceOptions').style.display = 'none';
                toggleReportMenu();
            } else {
                document.getElementById('cadenceOptions').style.display = 'block';
                // Don't close menu Ã¢â‚¬â€ let them pick cadence
            }
            renderActiveReport();
            updateReportMenuBtn();
        }

        function clearReport() {
            activeReport = null;
            activeCadence = null;
            renderActiveReport();
            updateReportMenuBtn();
        }

        function selectMarketReport() {
            activeReport = 'market_report';
            renderActiveReport();
            // Show cadence picker inline
            const ta = document.getElementById('chatInput');
            ta.value = '';
            ta.focus();
            // Open report menu to show cadence options
            document.getElementById('reportMenu').classList.add('open');
            document.getElementById('cadenceOptions').style.display = 'block';
        }

        function pickCadence(cadence) {
            activeCadence = cadence;
            document.querySelectorAll('.cadence-btn').forEach(b => b.classList.remove('active'));
            event.target.classList.add('active');
            document.getElementById('reportMenu').classList.remove('open');
            renderActiveReport();
            const ta = document.getElementById('chatInput');
            ta.value = `Generate a ${cadence} market report for `;
            ta.focus();
            autoResize(ta);
            updateSendBtn();
        }

        function renderActiveReport() {
            const container = document.getElementById('activeReportTag');
            if (!activeReport) { container.style.display = 'none'; return; }
            const r = REPORT_META[activeReport];
            let label = r.full;
            if (activeReport === 'market_report' && activeCadence) {
                label = activeCadence.charAt(0).toUpperCase() + activeCadence.slice(1) + ' ' + r.full;
            }
            container.style.display = 'flex';
            container.innerHTML = `<span class="active-report-badge" style="background:${r.color}18;border:1px solid ${r.color}35;color:${r.color}">
                <i class="bi ${r.icon}"></i> ${label}
                <button onclick="clearReport()">Ãƒâ€”</button>
            </span>`;
        }

        function toggleReportMenu() {
            const menu = document.getElementById('reportMenu');
            menu.classList.toggle('open');
            // Show cadence options if market report is selected
            const cadenceEl = document.getElementById('cadenceOptions');
            if (cadenceEl) cadenceEl.style.display = (activeReport === 'market_report') ? 'block' : 'none';
        }

        function updateReportMenuBtn() {
            const btn = document.getElementById('reportMenuBtn');
            if (activeReport) {
                const r = REPORT_META[activeReport];
                btn.style.background = r.color + '18';
                btn.style.borderColor = r.color + '35';
                btn.style.color = r.color;
            } else {
                btn.style.background = '';
                btn.style.borderColor = '';
                btn.style.color = '';
            }
        }

        // Close report menu on outside click
        document.addEventListener('click', (e) => {
            if (!e.target.closest('#reportMenuBtn') && !e.target.closest('#reportMenu')) {
                document.getElementById('reportMenu').classList.remove('open');
            }
        });

        // Ã¢â€â‚¬Ã¢â€â‚¬ Input Ã¢â€â‚¬Ã¢â€â‚¬
        function autoResize(el) {
            el.style.height = 'auto';
            el.style.height = Math.min(el.scrollHeight, 160) + 'px';
        }

        function updateSendBtn() {
            const btn = document.getElementById('sendBtn');
            const hasContent = document.getElementById('chatInput').value.trim() || attachedFiles.length > 0;
            btn.classList.toggle('active', hasContent && !isLoading);
        }

        function handleKeyDown(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        }

        function useSample(prompt) {
            const ta = document.getElementById('chatInput');
            ta.value = prompt;
            ta.focus();
            autoResize(ta);
            updateSendBtn();
        }

        // Ã¢â€â‚¬Ã¢â€â‚¬ Scrolling Ã¢â€â‚¬Ã¢â€â‚¬
        function scrollToBottom() {
