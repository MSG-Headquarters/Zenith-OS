        async function loadConversation(id) {
            try {
                var res = await fetch('/api/intel/conversations/' + id);
                var data = await res.json();
                if (data.success) {
                    currentConvoId = id;
                    messages = [];
                    document.getElementById('chatArea').innerHTML = '';
                    var welcome = document.getElementById('welcomeState');
                    if (welcome) welcome.style.display = 'none';

                    data.messages.forEach(function(msg) {
                        messages.push({ role: msg.role, content: msg.content });
                        renderMessage({ role: msg.role, content: msg.content });
                    });

                    // Update active state in sidebar
                    renderConversationList(allConversations.map(function(c) {
                        return Object.assign({}, c, { id: c.id });
                    }));
                    // Re-highlight
                    document.querySelectorAll('.conv-item').forEach(function(el) { el.classList.remove('active'); });
