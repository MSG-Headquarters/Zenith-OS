                var icon = c.report_type ? ({cma:'\ud83d\udcca',swot:'\ud83c\udfaf',cim:'\ud83d\udd12',bov:'\ud83d\udcb0',om:'\ud83d\udccb',market_report:'\ud83d\udcc8'}[c.report_type] || '\ud83d\udcac') : '\ud83d\udcac';
