<script>
// User Management JavaScript
let allUsers = [];
let currentFilter = 'all';

async function loadUsers() {
    try {
        const res = await fetch('/api/admin/users');
        const data = await res.json();
        if (data.success) {
            allUsers = data.users;
            renderUsers();
        }
    } catch (e) {
        console.error('Failed to load users:', e);
    }
}

function renderUsers() {
    const tbody = document.getElementById('userTableBody');
    let filtered = allUsers;
    
    if (currentFilter !== 'all') {
        filtered = allUsers.filter(u => u.status === currentFilter);
    }
    
    tbody.innerHTML = filtered.map(user => `
        <tr data-status="${user.status}">
            <td>
                <div class="user-cell">
                    <div class="user-avatar">${getInitials(user.name)}</div>
                    <div>
                        <div class="user-name">${user.name}</div>
                        <div class="user-email">${user.email}</div>
                    </div>
                </div>
            </td>
            <td>${user.role || 'User'}</td>
            <td><span class="status-badge status-${user.status}">${user.status}</span></td>
            <td>${user.license_key ? `<span class="license-key">${user.license_key}</span>` : '<span style="color: var(--text-muted);">ó</span>'}</td>
            <td>${user.last_login ? formatDate(user.last_login) : '<span style="color: var(--text-muted);">Never</span>'}</td>
            <td>
                ${user.status === 'pending' ? `<button class="action-btn activate" onclick="activateUser(${user.id})">Activate</button>` : ''}
                ${user.status === 'active' ? `<button class="action-btn suspend" onclick="suspendUser(${user.id})">Suspend</button>` : ''}
                ${user.status === 'suspended' ? `<button class="action-btn activate" onclick="reactivateUser(${user.id})">Reactivate</button>` : ''}
                <button class="action-btn" onclick="editUser(${user.id})">Edit</button>
                ${!user.license_key && user.status === 'pending' ? `<button class="action-btn" onclick="generateLicenseFor(${user.id})">Issue License</button>` : ''}
            </td>
        </tr>
    `).join('');
}

function getInitials(name) {
    if (!name) return '?';
    return name.split(' ').map(n => n[0]).join('').substring(0, 2).toUpperCase();
}

function formatDate(dateStr) {
    const d = new Date(dateStr);
    return d.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
}

function filterUsers(status) {
    currentFilter = status;
    document.querySelectorAll('.filter-btn').forEach(btn => btn.classList.remove('active'));
    event.target.classList.add('active');
    renderUsers();
}

function showInviteModal() {
    document.getElementById('inviteName').value = '';
    document.getElementById('inviteEmail').value = '';
    document.getElementById('inviteRole').value = 'User';
    document.getElementById('inviteModal').classList.add('active');
}

function closeModal(modalId) {
    document.getElementById(modalId).classList.remove('active');
}

async function sendInvite() {
    const name = document.getElementById('inviteName').value.trim();
    const email = document.getElementById('inviteEmail').value.trim();
    const role = document.getElementById('inviteRole').value;
    
    if (!name || !email) {
        alert('Please fill in all fields');
        return;
    }
    
    try {
        const res = await fetch('/api/admin/users/invite', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ name, email, role })
        });
        const data = await res.json();
        
        if (data.success) {
            closeModal('inviteModal');
            document.getElementById('generatedLicense').textContent = data.license_key;
            if (data.email_sent) {
                document.getElementById('inviteEmailSent').style.display = 'block';
            }
            document.getElementById('licenseModal').classList.add('active');
        } else {
            alert(data.error || 'Failed to create invitation');
        }
    } catch (e) {
        alert('Error sending invite');
        console.error(e);
    }
}

async function generateLicenseFor(userId) {
    try {
        const res = await fetch(`/api/admin/users/${userId}/license`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        const data = await res.json();
        
        if (data.success) {
            document.getElementById('generatedLicense').textContent = data.license_key;
            document.getElementById('inviteEmailSent').style.display = data.email_sent ? 'block' : 'none';
            document.getElementById('licenseModal').classList.add('active');
        } else {
            alert(data.error || 'Failed to generate license');
        }
    } catch (e) {
        alert('Error generating license');
        console.error(e);
    }
}

async function activateUser(userId) {
    if (!confirm('Activate this user? They will be able to log in immediately.')) return;
    await updateUserStatus(userId, 'active');
}

async function suspendUser(userId) {
    if (!confirm('Suspend this user? They will be logged out and unable to access the platform.')) return;
    await updateUserStatus(userId, 'suspended');
}

async function reactivateUser(userId) {
    if (!confirm('Reactivate this user?')) return;
    await updateUserStatus(userId, 'active');
}

async function updateUserStatus(userId, status) {
    try {
        const res = await fetch(`/api/admin/users/${userId}/status`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ status })
        });
        const data = await res.json();
        if (data.success) {
            loadUsers();
        } else {
            alert(data.error || 'Failed to update user');
        }
    } catch (e) {
        alert('Error updating user');
        console.error(e);
    }
}

function editUser(userId) {
    const user = allUsers.find(u => u.id === userId);
    if (!user) return;
    
    document.getElementById('editUserId').value = userId;
    document.getElementById('editUserName').value = user.name;
    document.getElementById('editUserRole').value = user.role || 'User';
    document.getElementById('editUserStatus').value = user.status;
    document.getElementById('editUserSubtitle').textContent = user.email;
    document.getElementById('editUserModal').classList.add('active');
}

async function saveUserChanges() {
    const userId = document.getElementById('editUserId').value;
    const name = document.getElementById('editUserName').value.trim();
    const role = document.getElementById('editUserRole').value;
    const status = document.getElementById('editUserStatus').value;
    
    try {
        const res = await fetch(`/api/admin/users/${userId}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ name, role, status })
        });
        const data = await res.json();
        if (data.success) {
            closeModal('editUserModal');
            loadUsers();
        } else {
            alert(data.error || 'Failed to save changes');
        }
    } catch (e) {
        alert('Error saving changes');
        console.error(e);
    }
}

function copyLicense() {
    const license = document.getElementById('generatedLicense').textContent;
    navigator.clipboard.writeText(license).then(() => {
        alert('License copied to clipboard!');
    });
}

// Load users on page load
document.addEventListener('DOMContentLoaded', loadUsers);
</script>

