    <div class="toast-container" id="toastContainer"></div>

    <script>
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // STATE
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        const selectedLeads = new Set();
        let draggedLeadId = null;
        let selectedCampaignId = null;
        let selectedMoveStage = null;
        const STAGE_ORDER = ['New', 'Contacted', 'Qualified', 'Proposal', 'Closed Won'];

        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // LEAD SELECTION
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        function toggleLeadSelection(id, event) {
            if (event && event.target.classList.contains('lead-checkbox')) return;
            const card = document.querySelector(`.lead-card[data-id="${id}"]`);
            const checkbox = card?.querySelector('.lead-checkbox');
            if (selectedLeads.has(id)) {
                selectedLeads.delete(id);
                card?.classList.remove('selected');
                if (checkbox) checkbox.checked = false;
            } else {
                selectedLeads.add(id);
                card?.classList.add('selected');
                if (checkbox) checkbox.checked = true;
            }
            updateToolbar();
        }

        function selectAllInStage(stageName) {
            const col = document.querySelector(`.pipeline-column[data-stage="${stageName}"] .column-body`);
            if (!col) return;
            col.querySelectorAll('.lead-card').forEach(card => {
                const id = parseInt(card.dataset.id);
                selectedLeads.add(id);
                card.classList.add('selected');
                const cb = card.querySelector('.lead-checkbox');
                if (cb) cb.checked = true;
            });
            updateToolbar();
        }

        function clearSelection() {
            selectedLeads.clear();
            document.querySelectorAll('.lead-card.selected').forEach(c => {
                c.classList.remove('selected');
                const cb = c.querySelector('.lead-checkbox');
                if (cb) cb.checked = false;
            });
            updateToolbar();
        }

        function updateToolbar() {
            const toolbar = document.getElementById('selectionToolbar');
            const count = selectedLeads.size;
            document.getElementById('selectedCount').textContent = count;
            toolbar.classList.toggle('active', count > 0);
        }

        function filterHot() { showToast('Hot leads filter coming soon!', 'success'); }
        function filterClosed() { showToast('Closed deals filter coming soon!', 'success'); }

        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // DRAG & DROP
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        function handleDragStart(event, leadId) {
            draggedLeadId = leadId;
            event.target.classList.add('dragging');
            event.dataTransfer.effectAllowed = 'move';
        }

        function handleDragEnd(event) {
            event.target.classList.remove('dragging');
            document.querySelectorAll('.column-body').forEach(col => col.classList.remove('drag-over'));
        }

        function handleDragOver(event) {
            event.preventDefault();
            event.currentTarget.classList.add('drag-over');
        }

        function handleDragLeave(event) {
            event.currentTarget.classList.remove('drag-over');
        }

        async function handleDrop(event, newStage) {
            event.preventDefault();
            event.currentTarget.classList.remove('drag-over');
            if (!draggedLeadId) return;
            await moveLeadToStage(draggedLeadId, newStage);
            draggedLeadId = null;
        }

        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // STAGE PROGRESSION (single lead)
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        async function moveLeadToStage(leadId, newStage) {
            try {
                const res = await fetch(`/api/leads/${leadId}/stage`, {
                    method: 'PUT',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ stage: newStage })
                });

                if (res.ok) {
                    showToast(`Lead moved to ${newStage}`, 'success');
                    setTimeout(() => window.location.reload(), 600);
                } else {
                    showToast('Failed to update lead stage', 'error');
                }
            } catch (err) {
                showToast('Error: ' + err.message, 'error');
            }
        }

        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // BULK MOVE STAGE
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        function openMoveStageModal() {
            selectedMoveStage = null;
            document.getElementById('moveLeadCount').textContent = selectedLeads.size;
            document.querySelectorAll('.stage-option').forEach(el => el.classList.remove('selected'));
            document.getElementById('confirmMoveBtn').disabled = true;
            document.getElementById('moveStageModal').classList.add('active');
        }

        function closeMoveStageModal() {
            document.getElementById('moveStageModal').classList.remove('active');
            selectedMoveStage = null;
        }

        function selectMoveStage(stage) {
            selectedMoveStage = stage;
            document.querySelectorAll('.stage-option').forEach(el => {
                el.classList.toggle('selected', el.dataset.stage === stage);
            });
            document.getElementById('confirmMoveBtn').disabled = false;
        }

        async function confirmBulkMove() {
            if (!selectedMoveStage || selectedLeads.size === 0) return;
            const leadIds = Array.from(selectedLeads);
            let moved = 0;
            for (const id of leadIds) {
                try {
                    const res = await fetch(`/api/leads/${id}/stage`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ stage: selectedMoveStage })
                    });
                    if (res.ok) moved++;
                } catch (err) { /* continue */ }
            }
            showToast(`Moved ${moved} lead(s) to ${selectedMoveStage}`, 'success');
            closeMoveStageModal();
            clearSelection();
            setTimeout(() => window.location.reload(), 600);
        }

        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // CAMPAIGN MODAL
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        async function openCampaignModal() {
            const leadCount = selectedLeads.size;
            document.getElementById('campaignLeadCount').textContent = leadCount;

            let withEmail = 0;
            selectedLeads.forEach(id => {
                const card = document.querySelector(`.lead-card[data-id="${id}"]`);
                if (card && card.dataset.email) withEmail++;
            });

            const noEmail = leadCount - withEmail;
            if (noEmail > 0) {
                document.getElementById('emailWarning').style.display = 'inline';
                document.getElementById('noEmailCount').textContent = noEmail;
            } else {
                document.getElementById('emailWarning').style.display = 'none';
            }

            await loadCampaigns();
            document.getElementById('campaignModal').classList.add('active');
        }

        function closeCampaignModal() {
            document.getElementById('campaignModal').classList.remove('active');
            selectedCampaignId = null;
        }

        async function loadCampaigns() {
            try {
                const res = await fetch('/api/sunday-mail/campaigns');
                const data = await res.json();
                if (data.success && data.campaigns.length > 0) {
                    const html = data.campaigns.map(c => `
                        <div class="campaign-option" data-id="${c.id}" onclick="selectCampaign(${c.id})">
                            <div class="campaign-option-name">${escapeHtml(c.name)}</div>
                            <div class="campaign-option-meta">${c.recipient_count || 0} recipients &bull; ${c.status}</div>
                        </div>
                    `).join('');
                    document.getElementById('campaignList').innerHTML = html;
                } else {
                    document.getElementById('campaignList').innerHTML = '<div style="text-align:center;padding:20px;color:var(--text-muted);">No campaigns yet. Create one below!</div>';
                }
            } catch (err) {
                document.getElementById('campaignList').innerHTML = '<div style="text-align:center;padding:20px;color:var(--text-muted);">Failed to load campaigns</div>';
            }
        }

        function selectCampaign(id) {
            selectedCampaignId = id;
            document.querySelectorAll('.campaign-option').forEach(el => {
                el.classList.toggle('selected', parseInt(el.dataset.id) === id);
            });
            document.getElementById('newCampaignName').value = '';
            document.getElementById('newCampaignSubject').value = '';
        }

        async function addToCampaign() {
            const leadIds = Array.from(selectedLeads);
            const newName = document.getElementById('newCampaignName').value.trim();
            const newSubject = document.getElementById('newCampaignSubject').value.trim();
            if (!selectedCampaignId && !newName) {
                showToast('Please select or create a campaign', 'error');
                return;
            }
            try {
                const body = { leadIds };
                if (selectedCampaignId) { body.campaignId = selectedCampaignId; }
                else { body.newCampaign = { name: newName, subject: newSubject }; }

                const res = await fetch('/api/crm/add-to-campaign', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(body)
                });
                const data = await res.json();
                if (data.success) {
                    showToast(data.message || `Added ${data.added} leads to campaign!`, 'success');
                    closeCampaignModal();
                    clearSelection();
                } else {
                    showToast('Failed: ' + data.error, 'error');
                }
            } catch (err) {
                showToast('Error: ' + err.message, 'error');
            }
        }

        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // FLYER
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        async function createFlyer(leadId) {
            try {
                const res = await fetch(`/api/crm/leads/${leadId}/create-flyer`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                const data = await res.json();
                if (data.success && data.projectId) {
                    window.location.href = `/intel/create?project=${data.projectId}`;
                } else {
                    showToast(data.error || 'Failed to create flyer project', 'error');
                }
            } catch (err) {
                showToast('Error creating flyer: ' + err.message, 'error');
            }
        }

        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        // UTILITIES
        // ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
        function escapeHtml(str) {
            if (!str) return '';
            return str.replace(/&/g, '&amp;').replace(/</g, '&lt;').replace(/>/g, '&gt;');
        }

        function showToast(message, type = 'success') {
            const container = document.getElementById('toastContainer');
            if (!container) return;
            const toast = document.createElement('div');
            toast.className = `toast ${type}`;
            toast.innerHTML = `<span>${type === 'success' ? '<i class="bi bi-check-circle"></i>' : '<i class="bi bi-x-circle"></i>'}</span><span>${message}</span>`;
            container.appendChild(toast);
            setTimeout(() => toast.remove(), 4000);
        }

        function openAddLeadModal() {
            document.getElementById('addLeadForm').reset();
            document.getElementById('leadState').value = 'FL';
            document.getElementById('addLeadModal').classList.add('active');
        }

        function closeAddLeadModal() {
            document.getElementById('addLeadModal').classList.remove('active');
        }

        async function submitNewLead() {
            const name = document.getElementById('leadName').value.trim();
            const company = document.getElementById('leadCompany').value.trim();
            if (!name || !company) { showToast('Please fill in Contact Name and Company', 'error'); return; }
            const leadData = {
                name, company,
                email: document.getElementById('leadEmail').value.trim() || null,
                phone: document.getElementById('leadPhone').value.trim() || null,
                property_address: document.getElementById('leadAddress').value.trim() || null,
                property_city: document.getElementById('leadCity').value.trim() || null,
                property_state: document.getElementById('leadState').value.trim() || 'FL',
                property_zip: document.getElementById('leadZip').value.trim() || null,
                property_type: document.getElementById('leadPropertyType').value || null,
                property_sqft: document.getElementById('leadSqft').value ? parseInt(document.getElementById('leadSqft').value) : null,
                value: document.getElementById('leadValue').value ? parseFloat(document.getElementById('leadValue').value) : null,
                stage: document.getElementById('leadStage').value || 'New',
                source: document.getElementById('leadSource').value || null,
                notes: document.getElementById('leadNotes').value.trim() || null
            };
            try {
                const res = await fetch('/api/crm/leads', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(leadData) });
                const result = await res.json();
                if (result.success) { showToast('Lead added!', 'success'); closeAddLeadModal(); setTimeout(() => window.location.reload(), 500); }
                else { showToast(result.error || 'Failed', 'error'); }
            } catch (err) { showToast('Error adding lead', 'error'); }
        }

        function toggleSearch() { showToast('Search coming soon!', 'success'); }
    </script>
